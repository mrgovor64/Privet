---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Cafe from "../components/Cafe.astro";
import Decor from "../components/Decor.astro";
import Reviews from "../components/Reviews.astro";
// Компоненты для десертов
import DessertCard from "../components/DessertCard.astro";
import SectionTitle from "../components/SectionTitle.astro";

// Загружаем десерты
import goods from "../data/goods.json";

// Выбираем избранные
const destacados = goods.filter((item) => item.featured === true);
---

<Layout title="Privet — Postres Rusos en Guadalajara">
  <!-- Hero -->
  <section id="inicio">
    <Hero />
  </section>

  <!-- About -->
  <section id="about" class="py-12">
    <About />
  </section>

  <!-- Destacados -->
  <section id="postres" class="py-12 bg-gray-50">
    <SectionTitle title="Nuestros postres destacados" />
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto px-4"
    >
      {destacados.map((goods) => <DessertCard {...goods} />)}
    </div>
    <div class="text-center mt-8">
      <a
        href="/todo"
        class="inline-block bg-primary text-white px-6 py-2 rounded hover:opacity-90 transition"
      >
        Ver todos los postres
      </a>
    </div>
  </section>

  <!-- Café -->
  <section id="cafe" class="py-12">
    <Cafe />
  </section>

  <!-- Decoración -->
  <section id="decoracion" class="py-12 bg-gray-50">
    <Decor />
  </section>

  <!-- Opiniones -->
  <section id="opiniones" class="py-12">
    <Reviews />
  </section>
</Layout>
