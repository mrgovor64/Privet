---
import Header from "../components/Header.astro";
import Contact from "../components/Contact.astro";
import "../styles/global.css";
import "../styles/base.css";
const { title = "Privet — Postres Rusos en Guadalajara" } = Astro.props;
const {
  description = "Descubre Privet, una repostería rusa en Guadalajara. Medovik, Napoleón, café Raf y postres únicos para sorprender.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- SEO -->
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="repostería rusa, pastelería rusa, postres rusos, medovik, napoleón, café Raf, zapopan, guadalajara, postres artesanales, decoración para pasteles"
    />
    <meta name="author" content="Privet Postres Rusos" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://privet.mx/images/logo.png" />
    <meta property="og:url" content="https://privet.mx/" />
    <meta property="og:type" content="website" />

    <!-- WhatsApp/Telegram/etc -->
    <meta name="twitter:card" content="summary_large_image" />

    <!-- ld -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Bakery",
        "@id": "https://privet.mx/",
        "name": "Privet – Postres Rusos",
        "image": "https://privet.mx/images/logo.png",
        "url": "https://privet.mx",
        "telephone": "+52 33 2838 5389",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Av. Patria 1140, Jardines del Tepeyac",
          "addressLocality": "Zapopan",
          "addressRegion": "Jalisco",
          "postalCode": "45058",
          "addressCountry": "MX"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 20.655851,
          "longitude": -103.423307
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday"
            ],
            "opens": "14:00",
            "closes": "21:00"
          }
        ],
        "priceRange": "$$",
        "servesCuisine": "Repostería rusa, cafés",
        "description": "Pastelería rusa artesanal en Guadalajara. Medovik, Napoleón, café Raf, galletas, decoración para pasteles y más.",
        "sameAs": [
          "https://www.instagram.com/reposteria_privet",
          "https://www.facebook.com/reposteria_privet"
        ]
      }
    </script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-T2144BVHK7"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-T2144BVHK7");
    </script>
  </head>
  <body class="bg-white text-text font-body">
    <Header />

    <main>
      <slot />
    </main>

    <!-- Contacto -->
    <section id="contacto" class="py-12 bg-gray-100">
      <Contact />
    </section>

    <footer class="py-8 bg-primary text-white text-sm text-center">
      © {new Date().getFullYear()} Privet — Postres Rusos en Guadalajara
    </footer>
  </body>
</html>
